{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="card">
    <div class="card-body">
        <h1>Félicitations!</h1>
        <p>Bienvenue {{ user.firstname }}, votre compte est maintenant activé.</p>
        <div class="text-center">
            <a href="{{ path('tournament_index') }}" class="btn btn-primary"><i class="fas fa-plus mr-2"></i>Créer un tournoi</a>
        </div>
        {% if targetUrl %}
            <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
        {% endif %}
    </div>
</div>
{% endblock fos_user_content %}
