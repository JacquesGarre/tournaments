{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}

{% block body %}
<div class="mt-5 mr-5 ml-5 pt-2 pb-5 bg-light card">
    <div class="card-body">
        <h1 class="h3 card-title mb-5">Paiements <a class="btn btn-danger btn-md float-right ml-2" href="{{ path('tournament_show', {'id': tournament.id}) }}"><i class="fas fa-chevron-left mr-2"></i>Retour au tournoi</a> <a class="btn btn-primary btn-md float-right" href="{{ path('payment_new', {'tournament_id': tournament.id}) }}"><i class="fas fa-plus mr-2"></i>Ajouter un paiement</a></h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Value</th>
                    <th>Date</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for payment in payments %}
                <tr>
                    <td>{{ payment.id }}</td>
                    <td>{{ payment.value }}</td>
                    <td>{{ payment.date ? payment.date|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('payment_show', {'id': payment.id}) }}">show</a>
                        <a href="{{ path('payment_edit', {'id': payment.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun paiement n'a été effectué.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
